<world>
    <window width="1024" height="768" />
    <camera>
        <position x="0" y="50" z="100" />
        <lookAt x="0" y="0" z="0" />
        <up x="0" y="1" z="0" />
        <projection fov="60" near="1" far="1000" />
    </camera>

    <!-- Sun -->
    <group>
        <transform>
            <scale x="5" y="5" z="5" />
        </transform>
        <models>
            <model file="sphere.3d" />
        </models>

        <!-- Comet with Catmull-Rom trajectory -->

        <!-- Mercury -->
        <group>
            <transform>
                <translate x="4" y="0.3" z="1" />
                <scale x="0.2" y="0.2" z="0.2" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>
        </group>

        <!-- Venus -->
        <group>
            <transform>
                <translate x="-6" y="-0.2" z="2" />
                <scale x="0.3" y="0.3" z="0.3" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>
        </group>

        <!-- Earth with Moon -->
        <group>
            <transform>
                <translate x="-8" y="0.5" z="-3" />
                <scale x="0.3" y="0.3" z="0.3" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>

            <!-- Moon -->
            <group>
                <transform>
                    <translate x="1.2" y="0" z="0" />
                    <scale x="0.1" y="0.1" z="0.1" />
                </transform>
                <models>
                    <model file="sphere.3d" />
                </models>
            </group>
        </group>

        <!-- Mars with Moons -->
        <group>
            <transform>
                <translate x="3" y="0" z="-5" />
                <scale x="0.25" y="0.25" z="0.25" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>

            <!-- Phobos -->
            <group>
                <transform>
                    <translate x="0.8" y="0" z="0.5" />
                    <scale x="0.06" y="0.06" z="0.06" />
                </transform>
                <models>
                    <model file="sphere.3d" />
                </models>
            </group>

            <!-- Deimos -->
            <group>
                <transform>
                    <translate x="0" y="0" z="1" />
                    <scale x="0.05" y="0.05" z="0.05" />
                </transform>
                <models>
                    <model file="sphere.3d" />
                </models>
            </group>
        </group>

        <!-- Jupiter with Moons -->
        <group>
            <transform>
                <translate x="12" y="-1" z="6" />
                <scale x="0.6" y="0.6" z="0.6" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>

            <!-- Europa -->
            <group>
                <transform>
                    <translate x="2" y="0" z="0" />
                    <scale x="0.12" y="0.12" z="0.12" />
                </transform>
                <models>
                    <model file="sphere.3d" />
                </models>
            </group>

            <!-- Ganymede -->
            <group>
                <transform>
                    <translate x="0" y="0" z="2.5" />
                    <scale x="0.15" y="0.15" z="0.15" />
                </transform>
                <models>
                    <model file="sphere.3d" />
                </models>
            </group>
        </group>

        <!-- Saturn with torus.3ds -->
        <group>
            <transform>
                <translate x="-15" y="1" z="-8" />
                <scale x="0.5" y="0.5" z="0.5" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>

            <group>
                <transform>
                    <rotate x="1" y="0" z="0" angle="60" />
                    <scale x="2" y="2" z="0.1" />
                </transform>
                <models>
                    <model file="torus.3d" />
                </models>
            </group>

            <!-- Titan -->
            <group>
                <transform>
                    <translate x="3" y="0" z="0" />
                    <scale x="0.1" y="0.1" z="0.1" />
                </transform>
                <models>
                    <model file="sphere.3d" />
                </models>
            </group>
        </group>

        <!-- Uranus -->
        <group>
            <transform>
                <translate x="18" y="0.5" z="10" />
                <scale x="0.4" y="0.4" z="0.4" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>
        </group>

        <!-- Neptune -->
        <group>
            <transform>
                <translate x="-20" y="-0.5" z="12" />
                <scale x="0.4" y="0.4" z="0.4" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>

            <!-- Triton -->
            <group>
                <transform>
                    <translate x="2" y="0" z="0" />
                    <scale x="0.08" y="0.08" z="0.08" />
                </transform>
                <models>
                    <model file="sphere.3d" />
                </models>
            </group>
        </group>
    </group>
    <group>
        <transform>
            <translate time="10" align="true">
                <point x="-50" y="30" z="0" />
                <point x="-30" y="20" z="20" />
                <point x="0" y="10" z="0" />
                <point x="30" y="20" z="-20" />
                <point x="50" y="30" z="0" />
                <point x="30" y="40" z="20" />
                <point x="0" y="50" z="0" />
                <point x="-30" y="40" z="-20" />
            </translate>
            <rotate x="0" y="1" z="0" time="5" />
            <scale x="0.5" y="0.5" z="0.5" />
        </transform>
        <models>
            <model file="comet.3d" />
        </models>
    </group>
</world>